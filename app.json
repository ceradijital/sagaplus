{
  "expo": {
    "name": "Saga Plus",
    "slug": "saga-plus",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.ceradijital.sagaplus"
    },
    "ios": {
      "supportsTablet": true
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "react-native-document-scanner-plugin",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Uygulama, ziyaret konumlarını doğru bir şekilde kaydedebilmek için konumunuza erişim istiyor."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Uygulama, ziyaret kanıtı olarak fotoğraf çekebilmek için kameranıza erişim istiyor."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
